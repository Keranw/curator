<div>
  <div class="user_login_div_middle"><br>
    <form action='/user/login' method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label >Username</label><br>
    <input  name="username" required="true" type="text"><br><br>
    <label >Password </label><br>
    <input  name="password" required="true" type="password"><br><br>
    <input type="submit" value="Login" class="btn-success"><br><br>
    </form>
    <label style="color:red;"><%= flash[:login_error] %></label><br>
  </div>
</div>
