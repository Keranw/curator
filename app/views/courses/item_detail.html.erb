<%if session[:account_type] == "educator"%>
  <%= render 'layouts/educatorsidebar' %>
<%else%>
  <%= render 'layouts/curatorsidebar' %>
<%end%>

<%= render 'layouts/stateline'%>

<br>
<div class="div_page_background">
  <label class="label_page_title">Atom Management</label>
  <br><br>

  <div class="div_itemd_background">

    <div class="div_cd_left">
      <label class="label_ititle">Details</label>
      <%if session[:account_type] == 'curator' %>
        <button class="button_metadata" data-toggle="modal" data-target="#eni"></button>
      <%end%>
    </div>
    <div class="div_cd_right">
      <div class="div_page_left">
        <label class="label_cd_key">Type</label>
      </div>
      <div class="div_page_right">
          <label class="label_cd_value"><%=@aim_atom["atype"]%></label>
      </div><br>
      <hr class="hr_cd"></hr>
      <div class="div_page_left">
        <label class="label_cd_key">Title</label>
      </div>
      <div class="div_page_right">
          <label class="label_cd_value"><%=@aim_atom["title"]%></label>
      </div><br>
      <hr class="hr_cd"></hr>
      <div class="div_page_left">
        <label class="label_cd_key">Time(m)</label>
      </div>
      <div class="div_page_right">
          <label class="label_cd_value"><%=@aim_atom["time"]%>m</label>
      </div><br>
      <hr class="hr_cd"></hr>
      <div class="div_page_left">
        <label class="label_cd_key">Points(credit)</label>
      </div>
      <div class="div_page_right">
          <label class="label_cd_value"><%=@aim_atom["point"]%></label>
      </div><br>
      <hr class="hr_cd"></hr>
      <div class="div_page_left">
        <label class="label_cd_key">Difficulty</label>
      </div>
      <div class="div_page_right">
          <label class="label_cd_value"><%=@aim_atom["difficulty"]%></label>
      </div>
    </div>
  </div>

</div>

<div class="modal fade" id="eni" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content modal_item_frame">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top:5px;margin-right:10px;">
      &times;
      </button>
      <div class="modal-body modal_container">
        <form action = '/courses/update_atom' method = "POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <p><br>
          <input type="hidden" name="aid" value="<%=@aim_atom["id"]%>">
          <label class="label_title">TitleÂ </label><br>
          <input type="text" name="title" required="true" class="input_edit" value="<%=@aim_atom["title"]%>">
          <br>
          <label class="label_title">Type</label><br>
          <input type="text" name="type" required="true" class="input_edit" value="<%=@aim_atom["atype"]%>"><br>
          <label class="label_title">Time(m)</label><br>
          <input type="text" name="time" required="true" class="input_edit" value="<%=@aim_atom["time"]%>"><br>
          <label class="label_title">Point(credits)</label><br>
          <input type="text" name="point" required="true" class="input_edit" value="<%=@aim_atom["point"]%>"><br>
          <label class="label_title">Difficulty(5=hardest)</label><br>
          <input type="text" name="difficulty" required="true" class="input_edit" value="<%=@aim_atom["difficulty"]%>"><br>
          <label class="label_title">Description</label><br>
          <textarea name="description" class="textarea_login" required="true"><%=@aim_atom["description"]%></textarea><br>
        </p>
        <input type="submit" class="button_cd_update btn-success" value="Update"><br>
        </form>
      </div>
    </div>
  </div>
</div>
