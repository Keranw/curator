<%= render 'layouts/stateline'%>

<%if session[:account_type] == "educator"%>
  <%= render 'layouts/educatorsidebar2' %>
<%else%>
  <%= render 'layouts/curatorsidebar2' %>
<%end%>



<br>
<div class="div_page_background">
  <label class="label_page_title">Notifications</label><br><br>

  <div class="div_message">
    <div class="div_page_left">
      <label class="label_text">The metadata of your course have been updated.
    </div>
    <div class="div_page_right">
      <form action="/courses/detail" method="get">
        <input name="authenticity_token" type="hidden" value=<%=form_authenticity_token%>></input>
        <input name="id" type="hidden" ></input>
        <input type="submit" value="Detail" class="button_detail"></input>
        <input type="submit" value="Dismiss" class="button_dismiss btn-success" disabled></input>
      </form>
    </div>
  </div>

  <div class="div_message">
    <div class="div_page_left">
      <label class="label_text">One of the atoms in your course have been updated.
    </div>
    <div class="div_page_right">
      <form action="/courses/detail/items" method="get">
        <input name="authenticity_token" type="hidden" value=<%=form_authenticity_token%>></input>
        <input name="id" type="hidden" ></input>
        <input type="submit" value="Detail" class="button_detail"></input>
        <input type="submit" value="Dismiss" class="button_dismiss btn-success" disabled></input>
      </form>
    </div>
  </div>

  <div class="div_message">
    <div class="div_page_left">
      <label class="label_text">One relevant atom has been published.
    </div>
    <div class="div_page_right">
      <form action="/courses/detail" method="get">
        <input name="authenticity_token" type="hidden" value=<%=form_authenticity_token%>></input>
        <input name="id" type="hidden" ></input>
        <input type="submit" value="Detail" class="button_detail"></input>
        <input type="submit" value="Dismiss" class="button_dismiss btn-success" disabled></input>
      </form>
    </div>
  </div>

</div>
